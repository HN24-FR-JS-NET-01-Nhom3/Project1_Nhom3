@model string

<div class="modal" id="errorMessageModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm" style="display: block !important; position: fixed !important; top: 10px !important; right: 50px !important;" data-bs-backdrop="false">
        <div class="modal-content" style="background-color: #f8d7da;">
            <div class="modal-header">
                <h5 class="modal-title fs-3">Error</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@Model</p>
            </div>
        </div>
    </div>
</div>