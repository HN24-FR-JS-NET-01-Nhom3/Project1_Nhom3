@model LotteryChecker.Common.Models.Entities.LotteryVm

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label for="lotteryNumber" class="form-label">@Html.DisplayNameFor(model => model.LotteryNumber)</label>
                    <input readonly asp-for="LotteryNumber" type="text" class="form-control" id="lotteryNumber">
                </div>
                <div class="mb-3">
                    <label for="drawDate" class="form-label">@Html.DisplayNameFor(model => model.DrawDate)</label>
                    <input readonly asp-for="DrawDate" type="text" class="form-control" id="drawDate">
                </div>             
                <div class="mb-3">
                    <label for="isPublished" class="form-label">@Html.DisplayNameFor(model => model.IsPublished)</label>
                    <input readonly asp-for="IsPublished" type="text" class="form-control" id="isPublished">
                </div>
                <div class="mb-3">
                    <label for="company" class="form-label">@Html.DisplayNameFor(model => model.Company)</label>
                    <input readonly asp-for="Company" type="text" class="form-control" id="company">
                </div>
                <div class="mb-3">
                    <label for="rewardName" class="form-label">@Html.DisplayNameFor(model => model.RewardName)</label>
                    <input readonly asp-for="RewardName" type="text" class="form-control" id="rewardName">
                </div>
                <div class="mb-3">
                    <label for="rewardValue" class="form-label">@Html.DisplayNameFor(model => model.RewardValue)</label>
                    <input readonly asp-for="RewardValue" type="text" class="form-control" id="rewardValue">
                </div>
                <div class="mb-3">
                    <a asp-action="Edit" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
