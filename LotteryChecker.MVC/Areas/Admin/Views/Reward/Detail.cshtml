@model LotteryChecker.Common.Models.Entities.RewardVm

@{
    ViewData["Title"] = "Chi tiết giải thưởng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label for="id" class="form-label">Reward Id</label>
                    <input readonly asp-for="RewardId" type="text" class="form-control" id="id" name="Id">
                    <span asp-validation-for="RewardId" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label for="firstName" class="form-label">Reward Name</label>
                    <input readonly asp-for="RewardName" type="text" class="form-control" id="firstName" name="FirstName">
                    <span asp-validation-for="RewardName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label">Reward Value</label>
                    <input readonly asp-for="RewardValue" type="text" class="form-control" id="lastName" name="LastName">
                    <span asp-validation-for="RewardValue" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}