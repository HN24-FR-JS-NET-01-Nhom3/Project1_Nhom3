@model IEnumerable<LotteryChecker.Common.Models.Entities.SearchHistoryVm>

@{
    ViewData["Title"] = "Index"; 
    var errors = TempData["ErrorMessage"] as IEnumerable<string>;
    if (errors != null)
    {
        foreach (var error in errors)
        {
            <p class="text-danger">@error</p>
        }
    }
}

@{
    @if (Model != null)
    {
        <div class="d-flex flex-wrap">
            @foreach (var item in Model)
            {
                <div class="flex-grow-1 border p-2 mb-3">
                    <div class="mb-1"><strong>Lottery Number:</strong> @Html.DisplayFor(modelItem => item.LotteryNumber)</div>
                    <div class="mb-1"><strong>Search Date:</strong> @Html.DisplayFor(modelItem => item.SearchDate)</div>
                    <div><strong>Draw Date:</strong> @Html.DisplayFor(modelItem => item.DrawDate)</div>
                </div>
            }
        </div>
    }
}