@using Microsoft.IdentityModel.Tokens
@model IEnumerable<LotteryChecker.Common.Models.Entities.SearchHistoryVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var errors = TempData["ErrorMessage"] as IEnumerable<string>;
    if (errors != null)
    {
        foreach (var error in errors)
        {
            <p class="text-danger">@error</p>
        }
    }

}
@{
    if (Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LotteryNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DrawDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SearchDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LotteryNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DrawDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SearchDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}