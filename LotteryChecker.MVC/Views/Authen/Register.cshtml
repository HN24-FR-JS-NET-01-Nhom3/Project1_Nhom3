@model LotteryChecker.Common.Models.Authentications.RegisterVm

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthenLayout";
}

<div class="my-5">
    <div class="row">
        @await Html.PartialAsync("_LeftPanelPartial")
        <div class="col-lg-5 ms-auto">
            <div class="login-form">
                <div class="d-flex justify-content-between mb-3 text-center">
                    <h3 class="w-100 text-capitalize">ngã ở đâu gấp đôi ở đó</h3>
                </div>
                <div class="mx-lg-5 mt-5">
                    <form asp-action="Register" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="Nhập họ và tên đệm"/>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for="LastName" type="text" class="form-control" placeholder="Nhập tên"/>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for="UserName" type="email" class="form-control" placeholder="Xác nhận email"/>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu"/>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="card-footer mt-3">
                            <input type="submit" class="btn my-btn-login w-100" value="Đăng ký"/>
                        </div>
                    </form>
                    <div class="mt-3 d-flex justify-content-center">
                        <p class="my-text-register">Đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>