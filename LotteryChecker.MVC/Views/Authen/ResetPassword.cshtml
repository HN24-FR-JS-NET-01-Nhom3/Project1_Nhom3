@model LotteryChecker.Common.Models.Authentications.ResetPasswordVm

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthenLayout";
}

<div class="my-5">
    <div class="row">
        @await Html.PartialAsync("_LeftPanelPartial")
        <div class="col-lg-5 ms-auto">
            <div class="login-form">
                <div class="d-flex justify-content-between mb-3 text-center">
                    <h3 class="w-100 text-capitalize">ngã ở đâu gấp đôi ở đó</h3>
                </div>
                <div class="mx-lg-5 mt-5">
                    <form asp-action="ResetPassword" method="post">
                        <div class="card-body">
                            <div class="form-group mt-2">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu"/>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            @Html.HiddenFor(model => model.Email)
                            @Html.HiddenFor(model => model.Token)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="card-footer mt-3">
                            <input type="submit" class="btn my-btn-login w-100" value="Xác nhận"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>