@model LotteryChecker.Common.Models.Authentications.LoginVm

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AuthenLayout";
}

<div class="my-5">
    <div class="row">
        <div class="col-lg-5 me-auto">
            <h2>
                Tạo tài khoản free chỉ trong một nốt nhạc
            </h2>
            <div class="break-line d-block mt-5"></div>
            <table class="mt-5">
                <tr>
                    <td rowspan="2">
                        <img src="@Url.Content("~/images/icons/account.png")" alt="Account" class="me-5"/>
                    </td>
                    <td>
                        <strong>
                            <h4>Tài khoản duy nhất</h4>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <td class="pb-4">
                        Truy cập vào tất cả các nền tảng của chúng tôi (Web, app)
                    </td>
                </tr>
                <tr>
                    <td rowspan="2">
                        <img src="@Url.Content("~/images/icons/connect.png")" alt="Connect" class="me-5"/>
                    </td>
                    <td>
                        <strong>
                            <h4>Duy trì kết nối</h4>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <td class="pb-4">
                        Hãy là người đầu tiên nhận thông tin về jackpot, giải thưởng, tài khoản
                    </td>
                </tr>
                <tr>
                    <td rowspan="2">
                        <img src="@Url.Content("~/images/icons/control.png")" alt="Control" class="me-5"/>
                    </td>
                    <td>
                        <strong>
                            <h4>Kiểm soát tài khoản của bạn dễ dàng</h4>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <td class="pb-4">
                        Chỉ vài click, có thể kiểm tra vé, xem giải thưởng, tài khoản và rút tiền nhanh chóng
                    </td>
                </tr>
                <tr>
                    <td rowspan="2">
                        <img src="@Url.Content("~/images/icons/secure.png")" alt="Secure" class="me-5"/>
                    </td>
                    <td>
                        <strong>
                            <h4>Nhanh và an toàn</h4>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <td class="pb-4">
                        Thông tin người dùng bảo mật tuyệt đối
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-lg-5 ms-auto">
            <div class="login-form">
                <div class="d-flex justify-content-between mb-3 text-center">
                    <h3 class="w-100 text-capitalize">ngã ở đâu gấp đôi ở đó</h3>
                </div>
                <div class="mx-lg-5 mt-5">
                    <form asp-action="Login" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                @* <label asp-for="Email">Email</label> *@
                                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                @* <label asp-for="Password">Password</label> *@
                                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="card-footer mt-3">
                            <input type="submit" class="btn my-btn-login w-100" value="Đăng nhập"/>
                        </div>
                    </form>
                    <div class="text-start border-bottom pb-3 mt-2">
                        <a class="forgot-password-btn" asp-action="ForgotPassword">Quên mật khẩu?</a>
                    </div>
                    <div class="mt-2 text-center pb-3">
                        <p class="my-text-register fw-bold mb-3">OR</p>
                        <a type="submit" class="btn my-btn-login-facebook w-100" asp-action="LoginFacebook">Đăng nhập bằng Facebook</a>
                        <input type="submit" class="btn my-btn-login-google w-100" value="Đăng nhập bằng Google"/>
                    </div>
                    <div class="mt-3 d-flex justify-content-center">
                        <p class="my-text-register">Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>