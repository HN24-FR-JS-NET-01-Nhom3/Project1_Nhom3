@model LotteryChecker.Common.Models.Authentications.ChangePasswordVm

@{
    ViewData["Title"] = "Thay đổi mật khẩu";
    Layout = "_Layout";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/customize.css" asp-append-version="true"/>
}

<div class="px-2">
    <div class="row">
        <div class="col-lg-3 text-center d-flex flex-column justify-content-center left-banner">
            @* <h3>Liên hệ quảng cáo</h3> *@
            @* <h5>0123 456 789</h5> *@
        </div>
        <div class="col-lg-6">
            <form asp-action="ChangePassword" method="post">
                <div class="mb-3">
                    <label for="currentPassword" class="form-label">Mật khẩu hiện tại <span class="text-danger">*</span></label>
                    <input asp-for="CurrentPassword" type="password" class="form-control" id="currentPassword" name="CurrentPassword">
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="newPassword" class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
                    <input asp-for="NewPassword" type="password" class="form-control" id="newPassword" name="NewPassword">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới <span class="text-danger">*</span></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" name="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group my-4">
                    <button type="submit" class="btn btn-for-checking-ticket">Xác nhận</button>
                    @* <a asp-action="Index" class="btn btn-secondary">Back to List</a> *@
                </div>
            </form>
        </div>
        <div class="col-lg-3 text-center d-flex flex-column justify-content-center right-banner">
            @* <h3>Liên hệ quảng cáo</h3> *@
            @* <h5>0123 456 789</h5> *@
        </div>

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}